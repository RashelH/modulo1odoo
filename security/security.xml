<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="group_responsable" model="res.groups">
            <field name="name">Responsables</field>
        </record>
    
    
        <record id="group_usuario" model="res.groups">
            <field name="name">Usuarios</field>
        </record>

        <record id="access_responsable" model="ir.rule">
            <field name="name">Responsable</field>
            <field name="model_id" ref="model_tareas_lista_tarea"/>
            <field name="groups" eval="[(4, ref('group_responsable'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
    
        <record id="access_tarea_pendiente_usuario" model="ir.rule">
            <field name="name">Tarea Pendiente Usuarios</field>
            <field name="model_id" ref="model_tareas_lista_tarea"/>
            <field name="domain_force">[('categoria', '=', 'pendiente')]</field>
            <field name="groups" eval="[(4, ref('group_usuario'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
    
        <record id="access_tarea_atrasada_usuario" model="ir.rule">
            <field name="name">Tarea Atrasada Usuarios</field>
            <field name="model_id" ref="model_tareas_lista_tarea"/>
            <field name="domain_force">[('categoria', '=', 'atrasada')]</field>
            <field name="groups" eval="[(4, ref('group_usuario'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="1"/>
        </record>
    
        <record id="access_tarea_terminada_usuario" model="ir.rule">
            <field name="name">Tarea Terminada Usuarios</field>
            <field name="model_id" ref="model_tareas_lista_tarea"/>
            <field name="domain_force">[('categoria', '=', 'terminado')]</field>
            <field name="groups" eval="[(4, ref('group_usuario'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>