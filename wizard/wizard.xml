<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="view_wizard_reapertura_form" model="ir.ui.view">
            <field name="name">tareas.wizard_reapertura.form</field>
            <field name="model">tarea.wizard_reapertura</field>
            <field name="arch" type="xml">
                <form string="Reapertura de Tarea">
                    <group>
                        <field name="motivo_reapertura"/>
                        <field name="fecha_limite_nueva"/>
                    </group>
                    <footer>
                        <button string="Confirmar Reapertura" type="object" name="confirmar_reapertura" class="oe_highlight"/>
                        <button string="Cancelar" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>


        <act_window id="action_wizard_reapertura"
        name="Reaperturar Tarea"
        binding_model="tareas.lista_tarea"
        res_model="tarea.wizard_reapertura"
        view_mode="form"
        target="new"/>

    </data>
</odoo>
